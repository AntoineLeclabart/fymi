{% extends 'layout.html.twig' %}

{% block content %}
    <div class="music-results-content">
        <h1>You should learn these instruments</h1>
        <div class="music-results-list">
        {% for instrument in instruments %}
            <figure class="music-results-instrument">
                <h2 class="music-results-h2">{{ instrument.data.name }}</h2>
                <img class="music-results-image" src="{{ instrument.data.image }}">
            </figure>
        {% endfor %}
        </div>
    </div>
{% endblock %}