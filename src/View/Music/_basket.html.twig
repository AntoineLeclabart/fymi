<div id="basket" class="basket">
    <div class="basket-close">
        <a href="/music#">X</a>
    </div>
    <div class="track-link basket-div basket-tracks">
        <h1>Tracks</h1>
        <div class="basket-content">
            {% for key, track in basket.tracks %}
                <p>{{track.name}} <a href="/music?remove=track&id={{ key }}#basket">ğŸ—‘</a></p>    
            {% endfor %}
        </div>
    </div>
    <div class="track-link basket-div basket-albums">
        <h1>Albums</h1>
        <div class="basket-content">
            {% for key, album in basket.albums %}
                <p>{{album.name}} <a href="/music?remove=album&id={{ key }}#basket">ğŸ—‘</a></p>    
            {% endfor %}
        </div>
    </div>
    <div class="track-link basket-div basket-artists">
        <h1>Artists</h1>
        <div class="basket-content">
            {% for key, artist in basket.artists %}
                <p>{{artist.name}} <a href="/music?remove=artist&id={{ key }}#basket">ğŸ—‘</a></p>    
            {% endfor %}
        </div>
    </div>
    <form action="/music/results">
        <button class="save-button" type="submit">Find instruments</button>
    </form>
</div>
